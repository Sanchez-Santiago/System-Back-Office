{
  "importMap": "./import_map.json",
  "entry": "Backend/src/main.ts",
  "tasks": {
    "start": "deno run -A src/main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write --unstable --coverage=coverage --parallel --allow-hrtime src/test/test_connection.ts"
  },
  "deploy": {
    "project": "tu-proyecto-id",
    "entrypoint": "src/main.ts",
    "include": ["src/"],
    "exclude": ["node_modules/", ".git/"]
  }
}
