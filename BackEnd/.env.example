# ============================================
# CONFIGURACIÓN DE PRUEBA DE CONEXIÓN A BD
# ============================================

# Habilitar/deshabilitar prueba de conexión al iniciar la aplicación
DB_CONNECTION_TEST_ENABLED=true

# Timeout para prueba de conexión (milisegundos)
DB_CONNECTION_TIMEOUT=10000

# Número de reintentos automáticos en caso de fallo
DB_CONNECTION_RETRIES=3

# Delay entre reintentos (milisegundos)
DB_CONNECTION_RETRY_DELAY=2000

# Detener aplicación si la prueba de conexión falla (true/false)
DB_CONNECTION_FAIL_FAST=true

# Verificar tablas críticas al iniciar (true/false)
DB_CHECK_CRITICAL_TABLES=true

# ============================================
# CONFIGURACIÓN DE HEALTH CHECK
# ============================================

# Habilitar health check de base de datos en endpoints
DB_HEALTH_CHECK_ENABLED=true

# Tiempo máximo para health check de base de datos (milisegundos)
DB_HEALTH_CHECK_TIMEOUT=5000
